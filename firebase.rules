rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // TEST-MODUS: Jeder eingeloggte User darf alles lesen/schreiben.
      // Das behebt die Initialisierungs-Blockade.
      allow read, write: if request.auth != null;
    }
  }
}
